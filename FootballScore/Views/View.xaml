<Window x:Class="FootballScore.Views.View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Football Score" Height="800" Width="1200">
    <Window.Resources>
        <ControlTemplate x:Key="DataGridTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="400" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400" />
                    <ColumnDefinition Width="400" />
                    <ColumnDefinition Width="400" />
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Foreground="Aqua" Content="{Binding Lola}"></Label>
            </Grid>
        </ControlTemplate>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="400" />
            <RowDefinition Height="400" />
            <RowDefinition Height="400" />
            <RowDefinition Height="400" />
            <RowDefinition Height="400" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <ContentControl Template="{DynamicResource DataGridTemplate}"></ContentControl>
        </Grid>
        <Grid Grid.Row="1">
            <ContentControl Template="{DynamicResource DataGridTemplate}"></ContentControl>
        </Grid>
        <Grid Grid.Row="2">
            <ContentControl Template="{DynamicResource DataGridTemplate}"></ContentControl>
        </Grid>
        <Grid Grid.Row="3">
            <ContentControl Template="{DynamicResource DataGridTemplate}"></ContentControl>
        </Grid>
        <Grid Grid.Row="4">
            <ContentControl Template="{DynamicResource DataGridTemplate}"></ContentControl>
        </Grid>
    </Grid>
</Window>